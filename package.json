{
  "name": "connecting-to-services",
  "version": "0.0.1",
  "private": true,
  "description": "Helping to connect people to appropriate services, meeting their time, location and accessibility needs.",
  "engines": {
    "node": "6.x.x"
  },
  "scripts": {
    "artillery-fire": "artillery run ./test/perf/all-results.json -o ./reports/all-results.json",
    "artillery-report": "artillery report ./reports/all-results.json",
    "build-css": "./css-build",
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "generate-coverage": "yarn run istanbul -- cover _mocha -- --recursive",
    "generate-full-coverage": "yarn run istanbul -- cover --include-all-sources _mocha -- --recursive",
    "git-hook": "yarn run lint && yarn run generate-coverage && yarn run check-coverage",
    "istanbul": "NODE_ENV=test istanbul",
    "lint": "eslint --ext .js,.json .",
    "postrewrite": "yarn run git-hook",
    "precommit": "yarn run git-hook",
    "prepush": "yarn run git-hook",
    "start": "node app.js",
    "start-logging": "node app.js | ./node_modules/bunyan/bin/bunyan",
    "snyk": "snyk",
    "test": "NODE_ENV=test mocha --recursive test",
    "travis": "yarn run git-hook && yarn run upload-coverage-coveralls && yarn run snyk -- test --org=nhsuk ignore --id=npm:moment:20161019 && yarn run snyk -- monitor --org=nhsuk",
    "upload-coverage-coveralls": "cat ./coverage/lcov.info | coveralls",
    "watch-dev": "nodemon app.js | ./node_modules/bunyan/bin/bunyan & nodemon -e scss -x yarn run build-css -- compact",
    "watch-dev-debug": "NODE_ENV=development && yarn run watch-dev",
    "watch-lint": "esw --watch .",
    "watch-test": "yarn run test -- --watch --reporter min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/connecting-to-services.git"
  },
  "bugs": {
    "url": "https://github.com/nhsuk/connecting-to-services/issues"
  },
  "dependencies": {
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cookie-parser": "^1.3.3",
    "eslint-config-nhsuk": "^0.2.0",
    "express": "^4.13.3",
    "helmet": "^3.0.0",
    "nhsuk-bunyan-logger": "^1.2.2",
    "node-sass": "^4.5.0",
    "normalize.css": "^7.0.0",
    "nunjucks": "^3.0.0",
    "object.values": "^1.0.3",
    "postcode": "^0.2.5",
    "request": "^2.81.0",
    "require-environment-variables": "^1.1.2",
    "snyk": "^1.21.2"
  },
  "devDependencies": {
    "artillery": "^1.6.0-2",
    "bower": "^1.8.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "cheerio": "^0.22.0",
    "coveralls": "^2.11.9",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-mocha": "^4.3.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-watch": "^3.0.0",
    "husky": "^0.13.0",
    "istanbul": "^0.4.3",
    "mocha": "^3.4.2",
    "nock": "^9.0.0",
    "nodemon": "^1.10.2",
    "proxyquire": "^1.7.10"
  },
  "snyk": true
}
